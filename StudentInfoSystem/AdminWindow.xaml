<Window x:Class="StudentInfoSystem.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="Избиране на опция - Администратор" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnStudInfo" Grid.Column="0" Content="Извеждане на данните за студент" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="200" Click="OnClick_ShowStudentInfo"/>
        <Button x:Name="btnAddUser" Grid.Column="1" Content="Студенти с най-висок успех" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="200" Click="OnClick_HighestGradeStudents"/>
    </Grid>
</Window>
